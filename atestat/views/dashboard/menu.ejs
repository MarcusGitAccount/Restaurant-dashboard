              </div><br>
              <div class="from-inline row" id="ingredients">
                <div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12 item-inline ingredient-input-group">
                  <input type="text" class="form-control item-name-box control ingredient-name" placeholder="Enter name and quantity" id="first">
                  <div class="custom-number-input ingredient" id="first-input">
                    <span data-step="1" data-increment="-1"><i class="fa fa-minus" aria-hidden="true"></i></span>
                    <input class="custom-number-input-textbox ingredient-quantity" type="text" value="1" data-max="500" data-min="0" readonly>
                    <span data-step="1" data-increment="1"><i class="fa fa-plus" aria-hidden="true"></i></span>
                  </div>
                  <button type="button" class="btn btn-grey add-waypoint"><i class="fa fa-plus" aria-hidden="true"></i></button>
                  <button type="button" class="btn btn-grey delete-waypoint"><i class="fa fa-eraser" aria-hidden="true"></i></button>
                </div>
              </div>
              <div class="form-group row">
                <div id="file-input-div">
                  <label for="image" class="hide-label col-md-3 col-sm-3">Choose images</label>
                  <input type="file" accept="image/*" name="image" class="col-md-3 col-sm-6 col-xs-6" id="img-input">
                </div>
                
                <div class="btn-submit-div col-md-3 col-sm-3 col-xs-6">
                  <input class=" btn btn-grey" style="margin-bottom: 2vh;" type="button" value="Add menu item" class="btn btn-grey" id="submit-menu">
                </div>
              </div>
              <div class="preview row"></div>
            </form>
