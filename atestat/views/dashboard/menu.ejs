                  <input id="ingredient-name" name="name" class="form-control control" type="text" placeholder="Enter name">
                </div>
                <div class="col-md-4 col-sm-6 col-xs-6">
                  <label for="price" class="control-label hide-label">Price in RON: </label>
                  <div class="form-group item-inline">
                    <div class="custom-number-input ingredient" id="price">
                      <span data-step="1" data-increment="-1"><i class="fa fa-minus" aria-hidden="true"></i></span>
                      <input class="custom-number-input-textbox price-textbox" type="text" value="5" data-max="1000" data-min="0" readonly>
